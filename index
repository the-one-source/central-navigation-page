<body>
  <!-- SPLASH (shown first) -->
  <div id="splash" class="splash" aria-hidden="false" role="dialog" aria-label="welcome overlay">
    <div class="splash-inner" id="splashInner">
      <div class="splash-phrase" id="splashPhrase">I love you</div>
      <div class="splash-sub" id="splashSub">in many languages</div>
      <div style="font-size:13px;color:var(--muted);margin-top:6px;">(You can add/remove languages in the code.)</div>
      <div class="splash-controls" style="justify-content:center;">
        <button id="skipBtn" class="ghost">Skip</button>
        <button id="proceedBtn" class="ghost">Proceed</button>
      </div>
    </div>
  </div>

  <div class="wrap" id="wrap">
    <div class="panel" role="main">
      <h1 id="title">Spectrum — Portal</h1>
      <p class="lead" id="subtitle">A unified access page for books, projects, and links — minimal & responsive.</p>

      <div class="controls" id="controlsRow" aria-hidden="false">
        <div class="left-controls">
          <label for="langSelect" class="sr-only">Language</label>
          <select id="langSelect" class="lang" aria-label="Select language"></select>

          <div class="theme-toggle" title="Light / Dark">
            <button id="themeBtn" aria-pressed="false">Dark</button>
          </div>
        </div>

        <div class="actions" style="align-items:center;">
          <button id="addCard" class="icon" title="Add new link">＋</button>
          <a id="exportBtn" class="small" style="text-decoration:none;color:var(--muted);cursor:pointer;">Export</a>
        </div>
      </div>

      <div id="gridWrap">
        <div class="grid" id="grid" aria-live="polite"></div>
      </div>

      <footer class="note">Tip: click the pencil ✎ on a card to edit and save. Edits persist locally.</footer>
    </div>
  </div>

<script>
/* ===========================
   CONFIG - editable arrays
   =========================== */

/* 1) Splash phrases (I love you in languages)
   - Each phrase: {text:"...", locale:"en"} 
   - You can add/remove easily here.
*/
const SPLASH_PHRASES = [
  {text:"I love you", locale:"en"},
  {text:"Ich liebe dich", locale:"de"},
  {text:"دوستت دارم", locale:"fa"},
  {text:"Te amo", locale:"es"},
  {text:"Je t'aime", locale:"fr"}
];

/* splash duration (ms) — total cycling time before auto-close.
   If you want 3 seconds: 3000, 5 seconds: 5000.
*/
const SPLASH_DURATION = 4000;

/* 2) Languages offered in UI — add objects with {code,label,dir}
   - Add new language by inserting here.
*/
const LANGUAGES = [
  {code:"en", label:"English", dir:"ltr"},
  {code:"de", label:"Deutsch", dir:"ltr"},
  {code:"fa", label:"فارسی", dir:"rtl"}
];

/* 3) LINK ITEMS — the actual cards you want to show.
   Fields: id (unique), title, subtitle, cover (url), link (url), price (string), note
   Replace cover URLs with hosted images (GitHub raw, CDN, or relative paths).
*/
const DEFAULT_LINK_ITEMS = [
  {
    id: "book-1",
    title: "Book of Love",
    subtitle: "A collection of gentle dialogues",
    cover: "https://via.placeholder.com/300x450.png?text=Book+Cover+1",
    link: "https://books.apple.com/",
    price: "€4.99",
    note: "Apple Books"
  },
  {
    id: "book-2",
    title: "Book of I",
    subtitle: "Reflections on singularity",
    cover: "https://via.placeholder.com/300x450.png?text=Book+Cover+2",
    link: "https://books.apple.com/",
    price: "€6.99",
    note: "Apple Books"
  },
];

/* ===========================
   Minimal i18n strings (UI labels)
   Extendable — add more languages by code.
   =========================== */
const UI_STRINGS = {
  en: {proceed:"Proceed", skip:"Skip", title:"Spectrum — Portal", subtitle:"A unified access page for books, projects, and links — minimal & responsive.", add:"Add new", edit:"Edit", save:"Save", cancel:"Cancel", link:"Open"},
  de: {proceed:"Weiter", skip:"Überspringen", title:"Spektrum — Portal", subtitle:"Zentrale Seite für Bücher, Projekte und Links — minimal & responsiv.", add:"Neu", edit:"Bearbeiten", save:"Speichern", cancel:"Abbrechen", link:"Öffnen"},
  fa: {proceed:"ادامه", skip:"رد کردن", title:"پرتال — طیف", subtitle:"یک صفحه مرکزی برای کتاب‌ها و پروژه‌ها — مینیمال و واکنش‌گرا.", add:"افزودن", edit:"ویرایش", save:"ذخیره", cancel:"انصراف", link:"بازکردن"}
};

/* ===========================
   Utilities & Persistence
   =========================== */
function qs(sel,ctx=document){return ctx.querySelector(sel);}
function qsa(sel,ctx=document){return [...ctx.querySelectorAll(sel)];}
function uid(prefix="id"){return prefix+"_"+Math.random().toString(36).slice(2,9);}

const STORAGE_KEYS = {THEME:"portal_theme_v1",LANG:"portal_lang_v1",ITEMS:"portal_items_v1"};

function loadItems(){
  try{
    const raw = localStorage.getItem(STORAGE_KEYS.ITEMS);
    if(!raw) return DEFAULT_LINK_ITEMS.slice();
    const parsed = JSON.parse(raw);
    if(Array.isArray(parsed)) return parsed;
    return DEFAULT_LINK_ITEMS.slice();
  }catch(e){
    console.warn("loadItems error",e);
    return DEFAULT_LINK_ITEMS.slice();
  }
}
function saveItems(items){
  localStorage.setItem(STORAGE_KEYS.ITEMS, JSON.stringify(items));
}
function loadTheme(){ return localStorage.getItem(STORAGE_KEYS.THEME) || "light"; }
function saveTheme(t){ localStorage.setItem(STORAGE_KEYS.THEME, t); }
function loadLang(){ return localStorage.getItem(STORAGE_KEYS.LANG) || LANGUAGES[0].code; }
function saveLang(l){ localStorage.setItem(STORAGE_KEYS.LANG, l); }

/* ===========================
   App State
   =========================== */
let ITEMS = loadItems();
let currentLang = loadLang();
let theme = loadTheme();

/* ===========================
   Render Helpers
   =========================== */
function renderLangSelect(){
  const sel = qs("#langSelect");
  sel.innerHTML = "";
  LANGUAGES.forEach(l=>{
    const opt = document.createElement("option");
    opt.value = l.code;
    opt.textContent = l.label;
    sel.appendChild(opt);
  });
  sel.value = currentLang;
  sel.dir = LANGUAGES.find(x=>x.code===currentLang)?.dir || "ltr";
  document.documentElement.setAttribute("dir", LANGUAGES.find(x=>x.code===currentLang)?.dir || "ltr");
  // Apply UI strings
  const s = UI_STRINGS[currentLang] || UI_STRINGS["en"];
  qs("#title").textContent = s.title;
  qs("#subtitle").textContent = s.subtitle;
  qs("#proceedBtn")?.replaceWith(createProceedBtn(s.proceed));
  qs("#skipBtn")?.textContent = s.skip;
}
function createProceedBtn(text){
  const btn = document.createElement("button");
  btn.id = "proceedBtn";
  btn.className = "ghost";
  btn.textContent = text;
  btn.addEventListener("click", hideSplash);
  return btn;
}

function applyTheme(t){
  if(t==="dark"){
    document.documentElement.setAttribute("data-theme","dark");
    qs("#themeBtn").textContent = "Light";
    qs("#themeBtn").setAttribute("aria-pressed","true");
  } else {
    document.documentElement.removeAttribute("data-theme");
    qs("#themeBtn").textContent = "Dark";
    qs("#themeBtn").setAttribute("aria-pressed","false");
  }
}

/* CARD RENDER */
function renderGrid(){
  const grid = qs("#grid");
  grid.innerHTML = "";
  ITEMS.forEach(item => {
    const card = document.createElement("div"); card.className = "card"; card.dataset.id = item.id;
    // cover
    const cover = document.createElement("div"); cover.className = "cover";
    const img = document.createElement("img"); img.alt = item.title || "";
    img.src = item.cover || "data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='450'></svg>";
    cover.appendChild(img);
    // meta
    const meta = document.createElement("div"); meta.className = "meta";
    const h3 = document.createElement("h3"); h3.textContent = item.title || "Untitled";
    const p = document.createElement("p"); p.textContent = item.subtitle || "";
    const price = document.createElement("div"); price.className = "price"; price.textContent = item.price || "";
    meta.appendChild(h3); meta.appendChild(p); meta.appendChild(price);
    // actions
    const actions = document.createElement("div"); actions.className = "actions";
    const open = document.createElement("a"); open.className = "link-btn"; open.href = item.link || "#"; open.textContent = (UI_STRINGS[currentLang]?.link || "Open"); open.target = "_blank" ;
    const edit = document.createElement("button"); edit.className = "icon"; edit.title = (UI_STRINGS[currentLang]?.edit || "Edit"); edit.innerHTML = "✎";
    actions.appendChild(open); actions.appendChild(edit);
    card.appendChild(cover); card.appendChild(meta); card.appendChild(actions);

    // edit handler
    edit.addEventListener("click", ()=> enterEditMode(card,item) );

    grid.appendChild(card);
  });
}

/* ENTER EDIT MODE: in-card editing fields */
function enterEditMode(card,item){
  // replace meta contents with fields
  const meta = card.querySelector(".meta");
  meta.innerHTML = "";
  const titleIn = document.createElement("input"); titleIn.className="field"; titleIn.value = item.title || "";
  const subIn = document.createElement("input"); subIn.className="field"; subIn.value = item.subtitle || "";
  const priceIn = document.createElement("input"); priceIn.className="field"; priceIn.value = item.price || "";
  const coverIn = document.createElement("input"); coverIn.className="field"; coverIn.value = item.cover || "";
  const linkIn = document.createElement("input"); linkIn.className="field"; linkIn.value = item.link || "";
  meta.appendChild(titleIn); meta.appendChild(subIn); meta.appendChild(priceIn); meta.appendChild(coverIn); meta.appendChild(linkIn);

  const saveRow = document.createElement("div"); saveRow.className="save-row";
  const saveBtn = document.createElement("button"); saveBtn.className="save"; saveBtn.textContent = UI_STRINGS[currentLang]?.save || "Save";
  const cancelBtn = document.createElement("button"); cancelBtn.className="cancel"; cancelBtn.textContent = UI_STRINGS[currentLang]?.cancel || "Cancel";
  saveRow.appendChild(cancelBtn); saveRow.appendChild(saveBtn);
  meta.appendChild(saveRow);

  // wire actions
  cancelBtn.addEventListener("click", ()=> renderGrid() );
  saveBtn.addEventListener("click", ()=>{
    // commit changes to ITEMS
    ITEMS = ITEMS.map(it => {
      if(it.id === item.id){
        return {
          ...it,
          title: titleIn.value.trim() || "Untitled",
          subtitle: subIn.value.trim(),
          price: priceIn.value.trim(),
          cover: coverIn.value.trim(),
          link: linkIn.value.trim()
        };
      }
      return it;
    });
    saveItems(ITEMS);
    renderGrid();
  });
}

/* Add new item quick */
function addNewItem(){
  const newItem = {
    id: uid("item"),
    title: UI_STRINGS[currentLang]?.add || "New",
    subtitle: "",
    cover: "https://via.placeholder.com/300x450.png?text=New+Cover",
    link: "",
    price: ""
  };
  ITEMS.unshift(newItem);
  saveItems(ITEMS);
  renderGrid();
}

/* Export current items as JSON (download) */
function exportItems(){
  const data = JSON.stringify(ITEMS, null, 2);
  const blob = new Blob([data], {type:"application/json"});
  const url = URL.createObjectURL(blob);
  const a = document.createElement("a");
  a.href = url;
  a.download = "portal-items.json";
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
}

/* ===========================
   Splash behavior
   =========================== */
let splashTimer = null;
let splashIndex = 0;
function cycleSplash(){
  const el = qs("#splashPhrase");
  if(!el) return;
  // rotate phrase every chunk
  const chunk = Math.max(800, Math.floor(SPLASH_DURATION / Math.max(1,SPLASH_PHRASES.length)));
  el.textContent = SPLASH_PHRASES[splashIndex % SPLASH_PHRASES.length].text;
  splashIndex++;
  splashTimer = setTimeout(()=> {
    if(document.hidden) { cycleSplash(); return; }
    if(splashIndex < SPLASH_PHRASES.length) cycleSplash();
  }, chunk);
}

/* Hide splash and reveal portal */
function hideSplash(){
  const s = qs("#splash");
  if(!s) return;
  s.style.opacity = "0";
  s.style.pointerEvents = "none";
  setTimeout(()=> s.remove(), 280);
}

/* Auto-dismiss after SPLASH_DURATION but allow skip */
function startSplashFlow(){
  cycleSplash();
  const total = SPLASH_DURATION;
  setTimeout(()=> hideSplash(), total);
}

/* ===========================
   Init / Events
   =========================== */
function init(){
  // render lang select
  renderLangSelect();

  // render grid
  renderGrid();

  // apply theme
  applyTheme(theme);

  // add listeners
  qs("#langSelect").addEventListener("change", (e)=>{
    currentLang = e.target.value;
    saveLang(currentLang);
    renderLangSelect();
    renderGrid();
  });

  qs("#themeBtn").addEventListener("click", ()=>{
    theme = (theme==="dark") ? "light" : "dark";
    saveTheme(theme);
    applyTheme(theme);
  });

  qs("#addCard").addEventListener("click", addNewItem);
  qs("#exportBtn").addEventListener("click", exportItems);
  qs("#skipBtn").addEventListener("click", hideSplash);

  // ensure proceed button bound
  qs("#proceedBtn").addEventListener("click", hideSplash);

  // start the splash
  startSplashFlow();
}

/* Run */
init();

/* Accessibility: dismiss splash on Escape */
window.addEventListener("keydown", (e)=>{
  if(e.key === "Escape") hideSplash();
});
</script>
</body>
</html>
