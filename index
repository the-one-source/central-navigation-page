    --transition: 220ms cubic-bezier(.2,.9,.3,1);
  }
  html,body{height:100%;margin:0;background:var(--bg);font-family:-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;color:var(--text);-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale;}
  .wrap{min-height:100%;display:flex;align-items:center;justify-content:center;padding:28px;}
  .panel{width:min(96%,var(--panel-width));max-width:var(--panel-width);background:var(--card);border-radius:var(--radius);box-shadow:var(--shadow);padding:28px;box-sizing:border-box;text-align:center;transition:background var(--transition),box-shadow var(--transition);}
  h1{margin:0 0 10px 0;font-weight:400;color:#444;font-size:20px;letter-spacing:0.2px;}
  p.lead{margin:8px 0 18px 0;color:var(--muted);font-size:14px;line-height:1.45;}
  /* SPLASH */
  .splash{
    position:fixed;inset:0;display:flex;align-items:center;justify-content:center;background:linear-gradient(180deg,rgba(245,247,250,0.95),rgba(245,247,250,0.95));
    z-index:120;backdrop-filter: blur(6px);
  }
  .splash-inner{max-width:900px;padding:32px 22px;border-radius:18px;background:linear-gradient(180deg,var(--card),rgba(255,255,255,0.9));box-shadow:0 20px 50px rgba(20,20,30,0.08);text-align:center;}
  .splash-phrase{font-size:22px;font-weight:600;color:var(--accent);margin:0 0 6px 0;}
  .splash-sub{font-size:13px;color:var(--muted);margin:0 0 8px 0;}
  .splash-controls{display:flex;gap:8px;justify-content:center;margin-top:12px;}
  button.ghost{background:transparent;border:1px solid #eee;padding:8px 12px;border-radius:10px;font-size:13px;cursor:pointer;}
  /* Controls row */
  .controls{display:flex;gap:10px;align-items:center;justify-content:space-between;margin-bottom:14px;flex-wrap:wrap;}
  .left-controls{display:flex;gap:10px;align-items:center;}
  select.lang{padding:8px 10px;border-radius:10px;border:1px solid #eaeaea;background:white;font-size:14px;}
  .theme-toggle{display:inline-flex;align-items:center;gap:8px;background:transparent;border-radius:999px;padding:6px;border:1px solid #eee;}
  .theme-toggle button{background:var(--accent);color:white;border:none;padding:8px 12px;border-radius:8px;cursor:pointer;font-size:13px;}
  /* Grid */
  .grid{display:grid;grid-template-columns:repeat(2,1fr);gap:14px;margin-top:12px;}
  .card{background:linear-gradient(180deg,var(--card),#fff);border-radius:12px;padding:12px;display:flex;gap:12px;align-items:center;box-shadow:0 6px 18px rgba(20,20,30,0.04);transition:transform .18s ease,box-shadow .18s ease;position:relative;}
  .card:hover{transform:translateY(-4px);box-shadow:0 18px 40px rgba(20,20,30,0.08);}
  .cover{width:84px;height:120px;flex-shrink:0;border-radius:6px;background:#f4f4f6;display:flex;align-items:center;justify-content:center;overflow:hidden;border:1px solid #f0f0f0;}
  .cover img{width:100%;height:100%;object-fit:cover;display:block;}
  .meta{flex:1;text-align:left;}
  .meta h3{margin:0;font-size:15px;font-weight:600;color:#222;}
  .meta p{margin:6px 0 0 0;font-size:13px;color:var(--muted);line-height:1.2;}
  .meta .price{margin-top:8px;font-weight:700;color:var(--accent);font-size:14px;}
  .actions{display:flex;gap:8px;align-items:center;}
  a.link-btn{background:var(--accent);color:white;padding:8px 12px;border-radius:10px;text-decoration:none;font-size:13px;box-shadow:0 6px 18px rgba(102,100,64,0.18);}
  button.icon{background:transparent;border:none;padding:6px;border-radius:8px;cursor:pointer;font-size:14px;color:var(--muted);}
  .small{font-size:12px;color:#999;}
  /* Edit mode fields */
  .field{display:block;width:100%;padding:8px;border-radius:8px;border:1px solid #eee;background:transparent;font-size:13px;box-sizing:border-box;}
  .card .save-row{display:flex;gap:8px;margin-top:8px;justify-content:flex-end;}
  button.save{background:#2ea44f;color:white;border:none;padding:8px 12px;border-radius:8px;cursor:pointer;}
  button.cancel{background:#eaeaea;border:none;padding:8px 12px;border-radius:8px;cursor:pointer;}
  /* Footer */
  footer.note{margin-top:14px;color:var(--muted);font-size:12px;}
